{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es6",
    "types": ["jest"],
    "baseUrl": "./src",
    "noUnusedLocals": false,
    "paths": {
      "@assets/*": ["./client/assets/*"],
      "@client/*": ["./client/domain/*"],
      "@graphql": ["./graphql-codegen.ts"],
      "@server/*": ["./server/domain/*"],
      "@shared/*": ["./shared/*"],
      "@test/client": ["./client/test/index.ts"],
      "@test/server": ["./server/test/index.ts"],
    },
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    // Excluding Cypress and Cypress test files from this tsconfig, as we lint Cypress with it's own tsconfig.json file located in
    // `./cypress/tsconfig.json`
    "cypress",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
